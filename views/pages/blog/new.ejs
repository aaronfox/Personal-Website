<div class="container top-of-page">
    <h1>Create a blog post</h1>
    <form action="/blog" method="POST">
        <div class="form-group">
            <label for="title">Title:</label>
            <input type="text" class="form-control" name="blog[title]" placeholder="title" id="title">
        </div>
        <div class="form-group">
            <label for="image">Image URL:</label>
            <input type="text" class="form-control" name="blog[image]" placeholder="image URL" id="image">
        </div>
        <div class="form-group">
            <label for="subheading">Subheading:</label>
            <input type="text" class="form-control" name="blog[subheading]" placeholder="subheading" id="subheading">
        </div>
        <div class="form-group">
            <label for="content">Content:</label>
            <textarea name="blog[body]" class="form-control" rows="5" id="content"></textarea>
        </div>
        
        <input type="submit" class="form-control" >
    </form>
</div>

