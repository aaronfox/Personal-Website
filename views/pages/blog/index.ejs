<% include ../../partials/header.ejs %>
 <body class="blog-index-page">
<!-- BEGIN NAVBAR -->
	<nav class="navbar navbar-inverse">
		<div class="container-fluid">
			<!-- Brand and toggle get grouped for better mobile display -->
			<div class="navbar-header">
				<button aria-expanded="false" class="navbar-toggle collapsed" data-target="#bs-example-navbar-collapse-1" data-toggle="collapse" type="button"><span class="sr-only">Toggle navigation</span> <span class="icon-bar"></span> <span class="icon-bar"></span> <span class="icon-bar"></span></button>
                <a class="navbar-brand my-logo hvr-buzz" href="/"><img class="my-logo" src="images/fox_head.png"></a>
			</div>
            <!-- Collect the nav links, forms, and other content for toggling -->
			<div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
				<ul class="nav navbar-nav">
					<li>
						<a href="/">About Me</a>
					</li>
					<li class="active">
						<a href="/blog">Blog</a>
					</li>
					<li>
						<a href="/resume">Resume</a>
					</li>
                    <% if(currentUser) { %>
                        <li>
                            <a href="#">Logged in as <%= currentUser.username %></a>
                        </li>
                        <li>
                            <a href="/logout">Logout</a>
                        </li>
                    <% } %>
				</ul>
			</div><!-- /.navbar-collapse -->
		</div><!-- /.container-fluid -->
	</nav>
<!-- END NAVBAR -->
<div class="container top-of-page">
    <% if(currentUser) { %>
         <a class="btn btn-lg" href="blog/new">Create a new blog post</a>               
    <% } %>
<% blogs.reverse(); blogs.forEach(function(blog) { %>
    <a class="blog-card-link blog-card" href="/blog/<%= blog._id %>">
        <h1 class="blog-card-title"><%= blog.title %></h1>
        <span>Posted by <em>Aaron Fox</em> on <%= blog.created %></span>
        <h3 class="blog-card-body"><%= blog.subheading %></h3>
        <hr>
    </a>
<% }); %>
</div>

<% include ../../partials/footer.ejs %>